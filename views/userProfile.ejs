<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('_head.ejs',{title}); -%>
  </head>

  
    <!-- navbar -->
    <%- include('_navbar.ejs'); -%>

    <div class="padding">
      <div class="col-md-8">
          <!-- Column -->
          <div class="card"> <img class="card-img-top" src="https://i.imgur.com/K7A78We.jpg" alt="Card image cap">
              <div class="card-body little-profile text-center">
                  <div class="pro-img"><img class="profile-pic" src="https://i.imgur.com/8RKXAIV.jpg" alt="user">
                    <span><i class="fa fa-camera upload-button"></i></span>
                     <input class="file-upload" type="file" accept="image/*"/>
                  </div>
                  

                  <h3 class="m-b-0">Name: <%= user.name %></h3>
                  <h3 class="m-b-0">Email: <%= user.email %></h3>

              <form id="login" class="form-updateUser" method="PATCH">
                  <div class="row text-center m-t-20">
                    <div class="col-md-6">
                      <div class="inputs"> <label>Name</label> <input class="form-control" type="text" placeholder="Name" id="name23"> </div>
                  </div>
                  <div class="col-md-6">
                      <div class="inputs"> <label>Email</label> <input class="form-control" type="text" placeholder="Email" id="email23"> </div>
                  </div>
                  </div>
                  <div class="form-group">
                    <input
                      type="submit"
                      value="UPDATE"
                      class="btn float-right myform_btn"
                    />
                  </div>
                </form>

                <!--   <a href="javascript:void(0)" class="m-t-10 waves-effect waves-dark btn btn-primary btn-md btn-rounded" data-abc="true">Follow</a> -->
              </div>
                
          </div>
      </div>
  </div>


<% include('_footer.ejs'); %>
 <script src="/js/userProfile.js"></script>
</body>
</html>
